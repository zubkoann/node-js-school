{
  "name": "nodejs-school-project",
  "version": "1.4.1",
  "description": "API REST using NodeJS and KOA framework, typescript. TypeORM for SQL with class-validators. Middlewares JWT, CORS, Winston Logger.",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest",
    "watch-server": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "tslint": "tslint --fix -c tslint.json -p tsconfig.json",
    "serve": "node dist/server.js",
    "build": "npm run tslint && npm run build-ts",
    "start": "npm run serve",
    "test-cucumber": "./node_modules/.bin/cucumber-js --parallel 1 --require ./features/steps/*.ts --require-module ts-node/register --format-options '{\"snippetInterface\": \"async-await\"}' --format json:reports/cucumber-report.json --format summary",
    "report": "node reports/cucumber-html-reporter.js"
  },
  "engines": {
    "node": "8.x.x",
    "npm": "5.x.x"
  },
  "author": "Javier Aviles",
  "license": "MIT",
  "repository": "github:javieraviles/node-typescript-koa-rest",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cucumber": "^4.0.5",
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^24.0.11",
    "@types/koa": "2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.0.28",
    "@types/koa__cors": "^2.2.2",
    "@types/node": "^10.14.1",
    "@types/shelljs": "^0.8.0",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "cucumber-html-reporter": "^4.0.5",
    "faker": "^4.1.0",
    "jest": "^24.5.0",
    "nodemon": "^1.17.4",
    "request-promise": "^4.2.4",
    "shelljs": "^0.8.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "class-validator": "^0.9.1",
    "dotenv": "^6.0.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.3.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^2.13.0",
    "pg": "^7.4.3",
    "pg-connection-string": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.6",
    "winston": "^3.0.0"
  }
}
